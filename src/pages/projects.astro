---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import '../styles/global.css';
import '../styles/card.css';
import '../styles/glitch.css';
---

<Layout title="Projects | Amar Begovic">
    <main class="main">
        <h1 class="glitch" data-text="Projects">Projects</h1>
        <p class="intro">Innovative solutions crafted with passion and expertise.</p>
        
        <div class="card-grid">
            <div class="card">
                <div class="card-content">
                    <Icon name="mdi:react" class="card-icon" />
                    <h2>React Dashboard</h2>
                    <p>A responsive admin dashboard with real-time data visualization.</p>
                </div>
                <a href="#" class="card-link">View Project</a>
            </div>
            <div class="card">
                <div class="card-content">
                    <Icon name="mdi:nodejs" class="card-icon" />
                    <h2>Node.js API</h2>
                    <p>Scalable RESTful API built with Express and MongoDB.</p>
                </div>
                <a href="#" class="card-link">View Project</a>
            </div>
            <div class="card">
                <div class="card-content">
                    <Icon name="mdi:vuejs" class="card-icon" />
                    <h2>Vue.js E-commerce</h2>
                    <p>Modern e-commerce platform with Vuex state management.</p>
                </div>
                <a href="#" class="card-link">View Project</a>
            </div>
            <div class="card">
                <div class="card-content">
                    <Icon name="mdi:language-typescript" class="card-icon" />
                    <h2>TypeScript Library</h2>
                    <p>Utility library for data manipulation and validation.</p>
                </div>
                <a href="#" class="card-link">View Project</a>
            </div>
        </div>
    </main>
</Layout>