---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import '../styles/card.css';
import '../styles/global.css';
import '../styles/glitch.css';
import { translate, getLanguage } from '../utils/translation.js';

const currentLang = getLanguage();
---

<Layout title={`${translate('contact', currentLang)} | Amar Begovic`}>
    <main class="main">
        <h1 class="glitch" data-text={translate('contact', currentLang)} data-i18n="contact">
            {translate('contact', currentLang)}
        </h1>
        <p class="intro" data-i18n="connectPlatforms">{translate('connectPlatforms', currentLang)}</p>
        
        <div class="card-grid">
            <div class="card">
                <div class="card-content">
                    <Icon name="simple-icons:github" class="card-icon" />
                    <h2>GitHub</h2>
                    <p data-i18n="githubExplore">{translate('githubExplore', currentLang)}</p>
                    <a href="https://github.com/AmarBego" class="card-link" data-i18n="viewProfile" target="_blank">
                        {translate('viewProfile', currentLang)}
                    </a>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <Icon name="simple-icons:maildotru" class="card-icon" />
                    <h2>Email</h2>
                    <p data-i18n="emailMessage">{translate('emailMessage', currentLang)}</p>
                    <a href="mailto:amar.begovic123@hotmail.com" class="card-link" data-i18n="sendEmail" target="_blank">
                        {translate('sendEmail', currentLang)}
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>

<script>
    import { setupClientTranslation } from '../utils/translation.js';
    setupClientTranslation();
</script>
