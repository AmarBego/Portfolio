---
const currentYear = new Date().getFullYear();
---

<footer>
    <div class="footer-content">
        <p>&copy; {currentYear} Amar Begovic. All rights reserved.</p>
        <nav>
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/projects">Projects</a>
            <a href="/contact">Contact</a>
        </nav>
    </div>
</footer>

<style>
    footer {
        background-color: var(--stroke);
        color: var(--paragraph);
        padding: 1rem 0;
        margin-top: auto;
    }
    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    nav {
        display: flex;
        gap: 1rem;
    }
    a {
        color: var(--button);
        text-decoration: none;
        transition: color 0.3s ease;
    }
    a:hover {
        color: var(--accent);
    }
    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
        }
    }
</style>